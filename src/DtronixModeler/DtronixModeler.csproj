<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>netcoreapp3.0</TargetFramework>
    <UseWPF>true</UseWPF>
    <Description>Modeler for defining database systems.</Description>
    <Version>1.5</Version>
    <Copyright>Copyright © Dtronix 2019</Copyright>
    <Product>Dtronix Database Modeler</Product>
    <Authors>DJGosnell</Authors>
    <Configurations>Debug;Release;Installer</Configurations>
    <ApplicationIcon>icon.ico</ApplicationIcon>
    <StartupObject />
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Xaml\Images\*" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="System.Data.SQLite.Core" Version="1.0.111" />
    <PackageReference Include="Tools.InnoSetup" Version="6.0.2.1" GeneratePathProperty="true" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\DtronixModel\DtronixModel.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="Xaml\Images\*" />
  </ItemGroup>

  <ItemGroup>
    <None Update="setup.iss">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>

  <Target Name="PostBuild" AfterTargets="PostBuildEvent" Condition="'$(Configuration)' == 'Installer'">
    <Exec Command="$(NuGetPackageRoot)Tools.InnoSetup\5.5.9\tools\iscc.exe /q $(TargetDir)setup.iss" />
  </Target>

</Project>