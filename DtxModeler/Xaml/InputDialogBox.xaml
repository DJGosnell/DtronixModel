<Window x:Class="DtxModeler.Xaml.InputDialogBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="InputDialogBox" Height="135" Width="336" ResizeMode="NoResize" WindowStyle="ToolWindow" WindowStartupLocation="CenterScreen">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="30*"/>
			<RowDefinition Height="36*"/>
			<RowDefinition Height="41*"/>
		</Grid.RowDefinitions>
		<TextBlock x:Name="_LblDescription" Text="TextBlock" VerticalAlignment="Center" Padding="10,0,0,0" Height="16" Margin="0,8,0,6"/>
		<Button x:Name="_BtnCancel" Content="Cancel" HorizontalAlignment="Right" Margin="0,0,10,10" Grid.Row="2" VerticalAlignment="Bottom" Width="75" Height="22" Click="_BtnCancel_Click" IsCancel="True"/>
		<TextBox x:Name="_TxtValue" HorizontalAlignment="Stretch" Grid.Row="1" TextWrapping="Wrap" Text="" VerticalAlignment="Center" Padding="1" Margin="10,0" Height="22"/>
		<Button x:Name="_BtnOk" Content="Ok" HorizontalAlignment="Right" Margin="0,0,90,10" Grid.Row="2" VerticalAlignment="Bottom" Width="75" Height="22" Click="_BtnOk_Click" IsDefault="True"/>

	</Grid>
</Window>
