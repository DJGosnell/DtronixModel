<Window x:Class="DtxModeler.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="460.759" Width="927.848" MinHeight="400" MinWidth="700" Loaded="Window_Loaded">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="40"/>
			<RowDefinition/>
			<RowDefinition Height="22"/>
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="Auto" MinWidth="200"/>
			<ColumnDefinition Width="464*"/>
			<ColumnDefinition Width="260"  MinWidth="210"/>
		</Grid.ColumnDefinitions>
		<Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Row="1" Grid.RowSpan="1">
			<Grid.RowDefinitions>
				<RowDefinition Height="24"/>
				<RowDefinition/>
			</Grid.RowDefinitions>
			<TreeView x:Name="_treDatabaseLayout" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" BorderThickness="0,1,1,1" Grid.RowSpan="1" Grid.Row="1">
				<TreeView.ContextMenu>
					<ContextMenu>
						<MenuItem Header="Add Column">
							<MenuItem.Icon>
								<Image Source="Images/add.png" />
							</MenuItem.Icon>
						</MenuItem>
						<MenuItem Header="Delete Column">
							<MenuItem.Icon>
								<Image Source="Images/delete.png" />
							</MenuItem.Icon>
						</MenuItem>
					</ContextMenu>
				</TreeView.ContextMenu>
			</TreeView>
			<TextBox HorizontalAlignment="Stretch" Height="23" TextWrapping="NoWrap" Text="Filter" VerticalAlignment="Top" BorderThickness="0,1,1,1"/>
		</Grid>
		<GridSplitter HorizontalAlignment="Left" VerticalAlignment="Stretch" Width="5" Grid.Column="1" Grid.Row="1" Grid.RowSpan="1"/>
		<GridSplitter HorizontalAlignment="Left" VerticalAlignment="Stretch" Width="5" Grid.Column="2" Grid.Row="1" Grid.RowSpan="1"/>
		<Menu HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.ColumnSpan="3" UseLayoutRounding="False">
			<Menu.Background>
				<LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
					<GradientStop Color="#FFF6F6F6" Offset="0.25"/>
					<GradientStop Color="#FFEAE8E8" Offset="0.25"/>
					<GradientStop Color="#FFDCD9D9" Offset="0.8"/>
					<GradientStop Color="White" Offset="1"/>
				</LinearGradientBrush>
			</Menu.Background>
			<MenuItem Header="_File" Height="21" VerticalAlignment="Top">
				<MenuItem Header="_New"/>
				<MenuItem Header="_Open"/>
				<Separator/>
				<MenuItem Header="E_xit"/>
			</MenuItem>
			<MenuItem Padding="0" Click="MenuItem_Click">
				<MenuItem.Icon>
					<Image Width="32" Height="32" Margin="2,4,0,4" Source="Images/document_empty.png"/>
				</MenuItem.Icon>
			</MenuItem>
			<MenuItem Padding="0" Command="Open">
				<MenuItem.Icon>
					<Image Width="32" Height="32" Margin="2,4,0,4" Source="Images/folder.png" HorizontalAlignment="Right"/>
				</MenuItem.Icon>
			</MenuItem>
		</Menu>

		<StatusBar HorizontalAlignment="Stretch" Grid.Row="2" Grid.ColumnSpan="3" VerticalAlignment="Stretch"/>
		<TabControl Grid.Column="1" HorizontalAlignment="Stretch" Grid.Row="1" VerticalAlignment="Stretch" Margin="5,0,0,0" BorderThickness="1" Grid.ColumnSpan="1">
			<TabItem Header="Table">
				<Grid>
					<Grid.RowDefinitions>
						<RowDefinition Height="49"/>
						<RowDefinition Height="61"/>
						<RowDefinition/>
					</Grid.RowDefinitions>
					<GroupBox Grid.Row="0" Header="Table Options" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
						<StackPanel Orientation="Horizontal" Margin="0,2,0,0">
							<Button Margin="5,0,0,0" Content="Delete Table" Padding="4,1" />
							<Button Margin="5,0,0,0" Content="Copy Table" Padding="4,1" />
						</StackPanel>
					</GroupBox>
					<GroupBox Grid.Row="1" Header="Table Info" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
						<TextBlock Text="Test"/>
					</GroupBox>
					<GroupBox Grid.Row="2" Header="Colum Definitions" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
						<DataGrid  HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
						</DataGrid>
					</GroupBox>
				</Grid>
			</TabItem>

		</TabControl>
		<TabControl Grid.ColumnSpan="2" Grid.Row="1" Grid.Column="2"   HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="5,0,0,0" BorderThickness="1,1,0,1">
			<TabItem Header="Column">
				<Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="90"/>
						<ColumnDefinition Width="100*" MinWidth="100"/>
					</Grid.ColumnDefinitions>
					<Grid.RowDefinitions>
						<RowDefinition Height="30"/>
						<RowDefinition Height="30"/>
						<RowDefinition Height="30"/>
						<RowDefinition Height="30"/>
						<RowDefinition Height="30"/>
						<RowDefinition Height="30"/>
						<RowDefinition/>
					</Grid.RowDefinitions>
					<TextBlock Grid.Row="0" Grid.Column="0" HorizontalAlignment="Stretch" TextWrapping="NoWrap" Text="Name" VerticalAlignment="Center" Padding="5,0,0,0" Height="16" Margin="0,6"/>
					<TextBox Grid.Row="0" Grid.Column="1" HorizontalAlignment="Stretch" Height="24" TextWrapping="NoWrap" Text="Name of Column" VerticalAlignment="Center"/>

					<TextBlock Grid.Row="1" Grid.Column="0" HorizontalAlignment="Stretch" TextWrapping="NoWrap" Text="Type" VerticalAlignment="Center" Padding="5,0,0,0" Height="16" Margin="0,6"/>
					<ComboBox Grid.Row="1" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>

					<TextBlock Grid.Row="2" Grid.Column="0" HorizontalAlignment="Stretch" TextWrapping="NoWrap" Text="Not Null" VerticalAlignment="Center" Padding="5,0,0,0" Height="16" Margin="0,6"/>
					<ComboBox Grid.Row="2" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>

					<TextBlock Grid.Row="3" Grid.Column="0" HorizontalAlignment="Stretch" TextWrapping="NoWrap" Text="Default value" VerticalAlignment="Center" Padding="5,0,0,0" Height="16" Margin="0,6"/>
					<TextBox Grid.Row="3" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Center" Text="Default Value"/>

					<TextBlock Grid.Row="4" Grid.Column="0" HorizontalAlignment="Stretch" TextWrapping="NoWrap" Text="Primary Key" VerticalAlignment="Center" Padding="5,0,0,0" Height="16" Margin="0,6"/>
					<ComboBox Grid.Row="4" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>

				</Grid>

			</TabItem>
		</TabControl>
	</Grid>
</Window>
