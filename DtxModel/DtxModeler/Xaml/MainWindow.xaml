<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Ddl="clr-namespace:DtxModel.Ddl;assembly=DtxModel" xmlns:Xaml="clr-namespace:DtxModeler.Xaml" x:Class="DtxModeler.Xaml.MainWindow"
        Title="MainWindow" Height="600" Width="930" MinHeight="400" MinWidth="700" Loaded="Window_Loaded">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="22"/>
			<RowDefinition/>
			<RowDefinition Height="22"/>
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="Auto" MinWidth="200"/>
			<ColumnDefinition Width="464*"/>
			<ColumnDefinition Width="260"  MinWidth="210"/>
		</Grid.ColumnDefinitions>
		<Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Row="1" Grid.RowSpan="1">
			<Grid.RowDefinitions>
				<RowDefinition Height="24"/>
				<RowDefinition/>
			</Grid.RowDefinitions>
			<TreeView x:Name="_treDatabaseLayout" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" BorderThickness="0,1,1,1" Grid.RowSpan="1" Grid.Row="1" SelectedItemChanged="_treDatabaseLayout_SelectedItemChanged">
			</TreeView>
			<TextBox HorizontalAlignment="Stretch" Height="23" TextWrapping="NoWrap" Text="Filter" VerticalAlignment="Top" BorderThickness="0,1,1,1"/>
		</Grid>
		<GridSplitter HorizontalAlignment="Left" VerticalAlignment="Stretch" Width="5" Grid.Column="1" Grid.Row="1" Grid.RowSpan="1"/>
		<GridSplitter HorizontalAlignment="Left" VerticalAlignment="Stretch" Width="5" Grid.Column="2" Grid.Row="1" Grid.RowSpan="1"/>
		<Menu HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.ColumnSpan="3" UseLayoutRounding="False">
			<Menu.Background>
				<LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
					<GradientStop Color="#FFF6F6F6" Offset="0.25"/>
					<GradientStop Color="#FFEAE8E8" Offset="0.25"/>
					<GradientStop Color="#FFDCD9D9" Offset="0.8"/>
					<GradientStop Color="White" Offset="1"/>
				</LinearGradientBrush>
			</Menu.Background>
			<MenuItem Header="_File" Height="21" VerticalAlignment="Top">
				<MenuItem Header="_New"/>
				<MenuItem x:Name="_miOpen" Header="_Open" Click="_miOpen_Click"/>
				<Separator/>
				<MenuItem Header="E_xit"/>
			</MenuItem>
		</Menu>

		<StatusBar HorizontalAlignment="Stretch" Grid.Row="2" Grid.ColumnSpan="3" VerticalAlignment="Stretch"/>
		<TabControl x:Name="_tbcDatabaseView" Grid.Column="1" HorizontalAlignment="Stretch" Grid.Row="1" VerticalAlignment="Stretch" Margin="5,0,0,0" BorderThickness="1" Grid.ColumnSpan="1">
			<TabItem x:Name="_tabTable" Header="Table">
				<Grid>
					<Grid.RowDefinitions>
						<RowDefinition Height="49"/>
						<RowDefinition Height="61"/>
						<RowDefinition/>
					</Grid.RowDefinitions>
					<GroupBox Grid.Row="0" Header="Table Options" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
						<StackPanel Orientation="Horizontal" Margin="0,2,0,0">
							<Button Margin="5,0,0,0" Content="Delete Table" Padding="4,1" />
							<Button Margin="5,0,0,0" Content="Copy Table" Padding="4,1" />
						</StackPanel>
					</GroupBox>
					<GroupBox Grid.Row="1" Header="Table Info" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
						<TextBlock Text="Test"/>
					</GroupBox>
					<GroupBox Grid.Row="2" Header="Colum Definitions" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
						<DataGrid AutoGenerateColumns="False" x:Name="_dagColumnDefinitions"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch" CanUserDeleteRows="False" CanUserAddRows="False" CanUserReorderColumns="False" IsReadOnly="True" SelectionChanged="_dagColumnDefinitions_SelectionChanged">
							<DataGrid.Columns>
								<DataGridTextColumn Header="Name" Width="100*" Binding="{Binding Path=Name}"/>
								<DataGridTextColumn Header="Type" Width="80*" Binding="{Binding Path=Type}"/>
								<DataGridTextColumn Header="Nullable" Width="60*" Binding="{Binding Path=CanBeNull}"/>
								<DataGridTextColumn Header="Default Value" Width="80*" Visibility="Hidden" />
								<DataGridCheckBoxColumn Header="PK" Width="25" Binding="{Binding Path=IsPrimaryKey}" />
							</DataGrid.Columns>
						</DataGrid>
					</GroupBox>
				</Grid>
			</TabItem>

			<TabItem x:Name="_tabIndexes" Header="Indexes">
				<Grid>
					<Grid.RowDefinitions>
						<RowDefinition Height="49"/>
						<RowDefinition Height="61"/>
						<RowDefinition/>
					</Grid.RowDefinitions>
				</Grid>
			</TabItem>

		</TabControl>
		<TabControl Grid.ColumnSpan="2" Grid.Row="1" Grid.Column="2"   HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="5,0,0,0" BorderThickness="1,1,0,1">
			<TabItem Header="Column">
				<Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="90"/>
						<ColumnDefinition Width="100*" MinWidth="100"/>
					</Grid.ColumnDefinitions>
					<Grid.RowDefinitions>
						<RowDefinition Height="30"/>
						<RowDefinition Height="30"/>
						<RowDefinition Height="30"/>
						<RowDefinition Height="30"/>
						<RowDefinition Height="30"/>
						<RowDefinition Height="30"/>
						<RowDefinition/>
					</Grid.RowDefinitions>
					<TextBlock Grid.Row="0" Grid.Column="0" HorizontalAlignment="Stretch" TextWrapping="NoWrap" Text="Name" VerticalAlignment="Center" Padding="5,0,0,0" Height="16" Margin="0,6"/>
					<TextBox x:Name="_txtColumnName" Grid.Row="0" Grid.Column="1" HorizontalAlignment="Stretch" Height="24" TextWrapping="NoWrap" Text="Name of Column" VerticalAlignment="Center"/>

					<TextBlock Grid.Row="1" Grid.Column="0" HorizontalAlignment="Stretch" TextWrapping="NoWrap" Text="Type" VerticalAlignment="Center" Padding="5,0,0,0" Height="16" Margin="0,6"/>
					<TextBox x:Name="_txtColumnType" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>

					<TextBlock Grid.Row="2" Grid.Column="0" HorizontalAlignment="Stretch" TextWrapping="NoWrap" Text="Nullable" VerticalAlignment="Center" Padding="5,0,0,0" Height="16" Margin="0,6"/>
					<ComboBox x:Name="_cmbColumnNullable" Grid.Row="2" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Center">
						<ComboBoxItem Content="True"/>
						<ComboBoxItem Content="False"/>
					</ComboBox>

					<TextBlock Grid.Row="3" Grid.Column="0" HorizontalAlignment="Stretch" TextWrapping="NoWrap" Text="Default value" VerticalAlignment="Center" Padding="5,0,0,0" Height="16" Margin="0,6"/>
					<TextBox x:Name="_txtColumnDefaultValue" Grid.Row="3" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Center" Text="Default Value"/>

					<TextBlock Grid.Row="4" Grid.Column="0" HorizontalAlignment="Stretch" TextWrapping="NoWrap" Text="Primary Key" VerticalAlignment="Center" Padding="5,0,0,0" Height="16" Margin="0,6"/>
					<ComboBox x:Name="_cmbColumnPrimaryKey" Grid.Row="4" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>

				</Grid>

			</TabItem>
		</TabControl>
	</Grid>
</Window>
