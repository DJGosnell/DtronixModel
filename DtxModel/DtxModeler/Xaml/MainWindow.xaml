<Window x:Class="DtxModeler.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="400" Width="700" MinHeight="400" MinWidth="700">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="40"/>
			<RowDefinition/>
			<RowDefinition Height="22"/>
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="Auto" MinWidth="181"/>
			<ColumnDefinition/>
		</Grid.ColumnDefinitions>
		<Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Row="1" Grid.RowSpan="1">
			<TreeView x:Name="_treDatabaseLayout" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Row="1" BorderThickness="1"/>
		</Grid>
		<GridSplitter HorizontalAlignment="Left" VerticalAlignment="Stretch" Width="5" Grid.Column="1" Grid.Row="1" Grid.RowSpan="1"/>
		<Menu HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.ColumnSpan="2" UseLayoutRounding="False">
			<Menu.Background>
				<LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
					<GradientStop Color="#FFF6F6F6" Offset="0.25"/>
					<GradientStop Color="#FFEAE8E8" Offset="0.25"/>
					<GradientStop Color="#FFDCD9D9" Offset="0.8"/>
					<GradientStop Color="White" Offset="1"/>
				</LinearGradientBrush>
			</Menu.Background>
			<MenuItem Header="_File" Height="21" VerticalAlignment="Top">
				<MenuItem Header="_New"/>
				<MenuItem Header="_Open"/>
				<Separator/>
				<MenuItem Header="E_xit"/>
			</MenuItem>
			<MenuItem Padding="0" Click="MenuItem_Click">
				<MenuItem.Icon>
					<Image Width="32" Height="32" Margin="2,4,0,4" Source="Images/document_empty.png"/>
				</MenuItem.Icon>
			</MenuItem>
			<MenuItem Padding="0">
				<MenuItem.Icon>
					<Image Width="32" Height="32" Margin="2,4,0,4" Source="Images/folder.png" HorizontalAlignment="Right"/>
				</MenuItem.Icon>
			</MenuItem>
		</Menu>

		<StatusBar HorizontalAlignment="Stretch" Grid.Row="2" Grid.ColumnSpan="2" VerticalAlignment="Stretch"/>
		<TabControl Grid.Column="1" HorizontalAlignment="Stretch" Grid.Row="1" VerticalAlignment="Stretch" Margin="5,0,0,0" BorderThickness="1,1,0,1">
			<TabItem Header="Table">
				<Grid>
					<Grid.RowDefinitions>
						<RowDefinition Height="49"/>
						<RowDefinition Height="61"/>
						<RowDefinition/>
					</Grid.RowDefinitions>
					<GroupBox Grid.Row="0" Header="Table Options" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
						<StackPanel Orientation="Horizontal" Margin="0,2,0,0">
							<Button Margin="5,0,0,0" Content="Delete Table" Padding="4,1" />
							<Button Margin="5,0,0,0" Content="Copy Table" Padding="4,1" />
						</StackPanel>
					</GroupBox>
					<GroupBox Grid.Row="1" Header="Table Info" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
						<TextBlock Text="Test"/>
					</GroupBox>
					<GroupBox Grid.Row="2" Header="Colum Definitions" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
						<DataGrid  HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
					</GroupBox>
				</Grid>
			</TabItem>

		</TabControl>


	</Grid>
</Window>
